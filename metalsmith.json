{
  "plugins": {
    "metalsmith-collections-convention": {},
    "metalsmith-metadata": {
      "config": "config.yaml",
      "navigation": "navigation.yaml"
    },
    "metalsmith-markdown": {},
    "metalsmith-include": {},
    "metalsmith-permalinks": {
      "pattern": ":url",
      "relative": false
    },
    "metalsmith-templates": {
      "engine": "nunjucks"
    },
    "metalsmith-browserify": {
      "files": [
        "js/entry.js"
      ],
      "dest": "js/scripts.js"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "dest": "."
    },
    "metalsmith-sass": {
      "outputStyle": "nested",
      "sourceComments": true,
      "sourceMap": true,
      "includePaths": [
        "assets/vendor",
        "assets/vendor/bootstrap-sass-twbs/assets/stylesheets",
        "assets/vendor/fontawesome/scss/"
      ]
    }
  }
}
